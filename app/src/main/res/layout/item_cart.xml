<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
                android:id="@+id/layout_cart_detail"
                android:background="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
              android:layout_width="match_parent"
              android:layout_height="65dp"
    >
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cb_cart_selected"
        android:layout_centerVertical="true"
        style="@style/CustomCheckboxTheme"
        android:checked="true"
        android:layout_marginLeft="10dp"
        />
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/iv_cart_thumb"
        android:layout_toRightOf="@+id/cb_cart_selected"
        android:src="@mipmap/goods_thumb"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_cart_good_name"
        android:text=""
        android:layout_toRightOf="@+id/iv_cart_thumb"
        android:layout_marginTop="5dp"
        android:textColor="#f90"
        android:lines="1"
        android:ellipsize="end"
        android:paddingRight="60dp"
        android:textSize="18sp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_cart_add"
        android:layout_below="@+id/tv_cart_good_name"
        android:layout_toRightOf="@+id/iv_cart_thumb"
        android:layout_marginTop="5dp"
        android:src="@mipmap/add_cart"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_cart_count"
        android:layout_below="@+id/tv_cart_good_name"
        android:layout_toRightOf="@+id/iv_cart_add"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="5dp"
        android:text="(4)"
        android:textColor="@color/black"
        android:textSize="16sp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_cart_del"
        android:layout_below="@+id/tv_cart_good_name"
        android:layout_toRightOf="@+id/tv_cart_count"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/del_cart"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_cart_price"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:text="ï¿¥88.88"
        android:textSize="18sp"
        android:textColor="#f90"
        />

</RelativeLayout>