<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#eff2f6"
              android:id="@+id/layout_upload_avatar"
              android:orientation="vertical"
    >
    <include layout="@layout/common_head_title_white"/>
    <RelativeLayout
        android:id="@+id/rl_personal_center_avatar"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户图像"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/iv_avatar_right_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/right_arrow_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/tv_user_avatar_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/contactlogo"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/iv_avatar_right_arrow"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_pressed"/>
    <RelativeLayout
        android:id="@+id/rl_personal_center_username"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/iv_username_right_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/right_arrow_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            />username
        <TextView
            android:id="@+id/tv_user_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/iv_username_right_arrow"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_pressed"/>
    <RelativeLayout
        android:id="@+id/rl_personal_center_usernick"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户昵称"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/iv_usernick_right_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/right_arrow_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            />username
        <TextView
            android:id="@+id/tv_user_usernick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/iv_usernick_right_arrow"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/bt_back_personal_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="退出登录"
            android:textSize="30sp"
            android:background="@color/personal_center_top_bg"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            />
    </RelativeLayout>
</LinearLayout>
