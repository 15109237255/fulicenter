<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <!-- 屏幕底部的菜单布局 -->

    <LinearLayout
        android:id="@+id/ll_menu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="#36f"
        android:orientation="horizontal">

    <RadioButton
        android:id="@+id/btnNewGoods"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:onClick="onClick"
        android:gravity="center"
        android:drawableTop="@mipmap/menu_item_new_good_normal"
        android:text="新品"
        android:textSize="16sp"
        android:textColor="#fff"
        android:background="@null"
        style="@style/style_menu_item"/>

    <RadioButton
        android:id="@+id/btnBoutique"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:onClick="onClick"
        android:gravity="center"
        android:textSize="16sp"
        android:text="精选"
        android:textColor="#fff"
        android:drawableTop="@mipmap/menu_item_boutique_normal"
       style="@style/style_menu_item" />

    <RadioButton
        android:id="@+id/btnCategory"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:onClick="onClick"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_gravity="center_vertical"
        android:text="分类"
        android:drawableTop="@mipmap/menu_item_category_normal"
        android:textColor="#fff"
        android:background="@null"/>

        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:id="@+id/layout_cart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#36f"
            android:onClick="onClick">

    <TextView
        android:id="@+id/btnCollect"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:onClick="onClick"
        android:gravity="center"
        android:textSize="16sp"
        android:drawableTop="@mipmap/menu_item_cart_normal"
        android:text="购物车"
        android:textColor="#fff"
        android:background="@null"/>


        <TextView
            android:layout_marginLeft="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"            android:textSize="16sp"
            android:text="100"
            android:textColor="#fff"
            />


    </RelativeLayout>
        <RadioButton
            android:id="@+id/tvCartHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:text="我的"
            android:drawableTop="@mipmap/menu_item_contact_list_normal"
            android:textColor="#fff"
            android:textSize="10sp"
            android:drawablePadding="5dp"/>
    </LinearLayout>
</RelativeLayout>
